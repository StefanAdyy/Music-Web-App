@model Domain.AlbumArtist

@{
    ViewData["Title"] = "Edit";
}
<br/>
<br/>
<h1>Edit</h1>
<br/>
<br/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div hidden class="form-group">
                <label asp-for="AlbumArtistId" class="control-label"></label>
                <input asp-for="AlbumArtistId" readonly class="form-control" />
                <span asp-validation-for="AlbumArtistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistId" class="control-label"></label>
                <select asp-for="ArtistId" asp-items="@ViewBag.Artists" class="form-control">
                </select>
                <span asp-validation-for="ArtistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AlbumId" class="control-label"></label>
                <select asp-for="AlbumId" asp-items="@ViewBag.Albums" class="form-control">
                </select>
                <span asp-validation-for="AlbumId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="btn btn-secondary">
    <a class="text-white" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
