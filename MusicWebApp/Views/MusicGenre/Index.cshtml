@model IEnumerable<Domain.MusicGenre>

@{
    ViewData["Title"] = "Music Genres";
}
<br/>
<br/>
<h1>Music Genres</h1>
<br/>
<br/>
<table class="table table-striped table-light">
    <thead class="thead-dark">
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.MusicGenreId)
                </th>*@
            <th scope="col">
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.MusicGenreId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td class="btn btn-primary">
                    @Html.ActionLink("Edit", "Edit", new { musicGenreId=item.MusicGenreId }, new{style="color:white"})
                </td>
                <td class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { musicGenreId=item.MusicGenreId }, new{style="color:white"})
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="btn btn-success">
    <a class="text-white" asp-action="Create">New Genre</a>
</p>
