@model IEnumerable<Domain.PlaylistSong>

@{
    ViewData["Title"] = "Details";
}
<br/>
<br/>
<h1>Songs</h1>
<br/>
<br/>
<table class="table table-striped table-light ">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SongTitle)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.SongArtistName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SongTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SongArtistName)
                </td>
                <td class="btn btn-primary">
                    @Html.ActionLink("Like", "Like", new { songId=item.SongId, playlistId=item.PlaylistId}, new{style="color:white"})
                </td>
                <td class="btn btn-danger">
                    @Html.ActionLink("Delete", "DeleteSongFromPlaylist", new { playlistSongId=item.PlaylistSongId, playlistId=item.PlaylistId}, new{style="color:white"})
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a type="button" class="btn btn-success" asp-action="AddSong" asp-route-playlistId="@ViewBag.PlaylistId">Add Song</a>
    <a type="button" class="btn btn-success" asp-action="AddArtist" asp-route-playlistId="@ViewBag.PlaylistId">Add Artist</a>
    <a type="button" class="btn btn-success" asp-action="AddAlbum" asp-route-playlistId="@ViewBag.PlaylistId">Add Album</a>
</p>
<br />
<p class="btn btn-secondary">
    <a class="text-white" asp-action="Index">Back</a>
</p>
