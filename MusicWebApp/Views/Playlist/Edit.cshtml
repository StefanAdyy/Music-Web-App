@model Domain.Playlist

@{
    ViewData["Title"] = "Edit";
}
<br/>
<br/>
<h1>Edit</h1>
<br/>
<br/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlaylistId" class="control-label"></label>
                <input asp-for="PlaylistId" class="form-control" />
                <span asp-validation-for="PlaylistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="btn btn-secondary">
    <a class="text-white" asp-action="Index">Back</a>
</div>

