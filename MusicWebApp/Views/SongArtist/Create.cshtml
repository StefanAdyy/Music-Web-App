@model Domain.SongArtist

@{
    ViewData["Title"] = "Create";
}

<br/>
<br/>
<h1>New Artist</h1>
<br/>
<br/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SongId" class="control-label"></label>
                <select asp-for = "SongId" asp-items="@ViewBag.Songs" class="form-control">
                    <option value="">Please select a song</option>
                </select>
                <span asp-validation-for="SongId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArtistId" class="control-label"></label>
                <select asp-for = "ArtistId" asp-items="@ViewBag.Artists" class="form-control">
                    <option value="">Please select an artist</option>
                </select>
                <span asp-validation-for="ArtistId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="btn btn-secondary">
    <a class="text-white" asp-action="Index">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
