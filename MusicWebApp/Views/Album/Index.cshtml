@model IEnumerable<Domain.Album>

@{
    ViewData["Title"] = "Albums";
}
<br/>
<br/>
<h1>Albums</h1>
<br/>
<br/>
<table class="table table-striped table-light">
    <thead class="thead-dark">
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.AlbumId)
                </th>*@
            <th scope="col">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.RecordLabel)
            </th>
            <th scope="col">
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.AlbumId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecordLabel)
                </td>
                <td class="btn btn-primary">
                    @Html.ActionLink("Edit", "Edit", new { albumId=item.AlbumId }, new{style="color:white"})
                </td>
                <td class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { albumId=item.AlbumId }, new{style="color:white"})
                </td>
            </tr>
        }
    </tbody>
</table>
<p class="btn btn-success">
    <a class="text-white" asp-action="Create">New Album</a>
</p>