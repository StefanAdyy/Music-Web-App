@model IEnumerable<Domain.Song>

@{
    ViewData["Title"] = "Songs";
}
<br/>
<br/>
<h1>Songs</h1>
<br/>
<br/>
<table class="table table-striped table-light">
    <thead class="thead-dark">
        <tr>
            @*<th>
                @Html.DisplayNameFor(model => model.SongId)
                </th>*@
            <th scope="col">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Length)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Likes)
            </th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @*<td>
                    @Html.DisplayFor(modelItem => item.SongId)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Length)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Likes)
                </td>
                <td class="btn btn-primary">
                    @Html.ActionLink("Edit", "Edit", new { songId=item.SongId }, new{style="color:white"})
                </td>
                <td class="btn btn-danger">
                    @Html.ActionLink("Delete", "Delete", new { songId=item.SongId }, new{style="color:white"})
                </td>
            </tr>
        }
    </tbody>
</table>

<p class="btn btn-success">
    <a class="text-white" asp-action="Create">New Song</a>
</p>
